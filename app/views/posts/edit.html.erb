<h1>口コミ編集</h1>
投稿日: <%= @post.created_at%>
<%= form_with model: @post, local: true do |form| %>
  <div class="form-group">
    <%= form.label :content, "内容" %>
    <%= form.text_area :content, rows: 5, class: "form-control" %>
  </div>
  <div>
    <%= form.submit "更新する", class: "btn btn-outline-primary" %>
<% end %>