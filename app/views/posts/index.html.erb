<h1 class="text-center">みんなの口コミ</h1>
<%= link_to "新規投稿", new_post_path, class: 'btn btn-primary' %>
<table class="table table-bordered table-striped mt-4">
  <thead class="table-primary">
    <tr>
      <th scope="col">投稿内容</th>
      <th scope="col">サブスクリプション名</th>
      <th scope="col">投稿者</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td>
          <%= link_to post.content, post %>
          </td>
        <td>
          <%= post.subscription.service_name %>       
        </td>
        <td>
          <%= post.user.name %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>